{
  "name": "argue-cli",
  "version": "2.0.0-alpha",
  "description": "Node.js CLI arguments parser.",
  "author": "dangreen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TrigenSoftware/Argue.git"
  },
  "bugs": {
    "url": "https://github.com/TrigenSoftware/Argue/issues"
  },
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "generateDocs": "typedoc ./src --out ./docs --ignoreCompilerErrors --excludeExternals --mode modules",
    "lint": "tslint -p . -t stylish 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "jest": "NODE_ENV=test jest -c jest.config.json",
    "test": "npm run lint && npm run jest",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "strict",
    "cli",
    "arguments",
    "parser",
    "console",
    "terminal"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "coveralls": "^3.0.2",
    "jest": "^23.5.0",
    "rollup": "^0.64.1",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-tslint": "^0.1.34",
    "rollup-plugin-typescript2": "^0.16.1",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-trigen": "^3.0.6",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "files": [
    "lib"
  ]
}
