{
  "testEnvironment": "node",
  "testRegex": "src/.*\\.spec\\.(jsx?|tsx?)$",
  "transform": {
    "^.+\\.(t|j)sx?$": ["@swc/jest", {
      "env": {
        "targets": {
          "node": 14
        }
      }
    }]
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!**/*.d.ts"
  ],
  "coverageReporters": [
    "lcovonly",
    "text"
  ]
}
